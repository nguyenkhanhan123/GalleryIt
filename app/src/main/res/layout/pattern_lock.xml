<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnGalleryit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:fontFamily="@font/comic"
            android:paddingHorizontal="8dp"
            android:text="@string/locker"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:text="@string/close"
            android:textColor="@color/white"
            android:fontFamily="@font/comic"
            android:textSize="16sp" />
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ImageView
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_lock_fingerprint" />

    <TextView
        tools:ignore="HardcodedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/comic"
        android:text="Use pattern or fingerprint"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="24dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        />
    <com.dragnell.myapplication.view.customview.CustomPatternView
        android:id="@+id/customPatternView"
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:layout_gravity="center" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />
</LinearLayout>