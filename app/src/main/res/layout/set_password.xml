<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnGalleryit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/ic"
            android:layout_height="@dimen/ic"
            android:layout_gravity="center"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/back"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/tvTypePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:fontFamily="@font/comic"
            android:paddingHorizontal="8dp"
            android:text="@string/set_pin"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/haha"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_lock_fingerprint" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/comic"
        android:text="@string/set_pin"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/lnPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/dot1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/gray_dot"
            />
        <ImageView
            android:id="@+id/dot2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/gray_dot"
            />
        <ImageView
            android:id="@+id/dot3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/gray_dot"
            />
        <ImageView
            android:id="@+id/dot4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/gray_dot"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <GridLayout
        android:id="@+id/glNumber"
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:layout_gravity="center"
        android:columnCount="3"
        android:visibility="visible"
        android:rowCount="4">

        <TextView
            android:id="@+id/number1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="1"
            android:tag="1"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/number2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="2"
            android:tag="2"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/number3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="3"
            android:tag="3"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/number4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="4"
            android:tag="4"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/number5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="5"
            android:tag="5"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/number6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="6"
            android:tag="6"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/number7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="7"
            android:tag="7"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/number8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="8"
            android:tag="8"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/number9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="9"
            android:tag="9"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />

        <TextView
            android:id="@+id/number0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/comic"
            android:gravity="center"
            android:text="0"
            android:tag="0"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:src="@drawable/delete"
            android:padding="24dp"
            app:tint="@color/white" />
    </GridLayout>

    <com.dragnell.myapplication.view.customview.CustomPatternView
        android:id="@+id/customPatternView"
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:id="@+id/lnSwitch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_switch"
        android:gravity="center"
      >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/swap"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/comic"
            android:paddingHorizontal="18dp"
            android:text="@string/switch_to_pattern"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>